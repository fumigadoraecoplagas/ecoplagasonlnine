    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script type="module">
        // Cargar el módulo de auditoría
        import './administrador_bodegasecure_auditoria.js';
        
        // Asegurar que las funciones estén disponibles globalmente después de cargar
        document.addEventListener('DOMContentLoaded', function() {
            // Configurar el botón de cargar después de que el módulo se haya cargado
            setTimeout(() => {
                const btnCargar = document.getElementById('btnCargarTransacciones');
                if (btnCargar) {
                    btnCargar.onclick = function() {
                        if (window.cargarTransaccionesAuditoria) {
                            window.cargarTransaccionesAuditoria();
                        } else {
                            alert('Error: La función de cargar transacciones no está disponible. Por favor, recarga la página.');
                            console.error('cargarTransaccionesAuditoria no está disponible');
                        }
                    };
                }
                
                if (!window.cargarTransaccionesAuditoria) {
                    console.warn('cargarTransaccionesAuditoria no está disponible, reintentando...');
                }
            }, 500);
        });
    </script>
