    <div class="main-container">
        <!-- Redirecci√≥n autom√°tica -->
        <div class="redirect-container">
            <div class="redirect-card">
                <div class="redirect-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3 class="redirect-title">Sistema Seguro</h3>
                <p class="redirect-message">
                    Verificando autenticaci√≥n...
                </p>
                <div class="redirect-spinner">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
                <div class="security-badge">
                    <i class="fas fa-shield-alt"></i>
                    Autenticaci√≥n segura con Firebase
                </div>
            </div>
        </div>
    </div>

    <!-- Sistema de Autenticaci√≥n Seguro -->
    <script type="module">
        import { auth } from './auth-secure.js';

        // Funci√≥n para esperar a que secureAuthManager est√© disponible
        function waitForSecureAuthManager() {
            return new Promise((resolve) => {
                const checkAuth = () => {
                    if (window.secureAuthManager) {
                        resolve(true);
                    } else {
                        setTimeout(checkAuth, 100);
                    }
                };
                checkAuth();
            });
        }

        // Funci√≥n para esperar a que auth.currentUser est√© disponible
        function waitForAuthUser() {
            return new Promise((resolve) => {
                let retries = 0;
                const maxRetries = 30; // 3 segundos m√°ximo
                const checkAuth = () => {
                    if (auth.currentUser) {
                        resolve(true);
                    } else if (retries < maxRetries) {
                        retries++;
                        setTimeout(checkAuth, 100);
                    } else {
                        resolve(false);
                    }
                };
                checkAuth();
            });
        }

        // Esperar a que el DOM est√© listo
        document.addEventListener('DOMContentLoaded', async function() {
            console.log('üîí [SECURE] Verificando autenticaci√≥n...');
            
            // Verificar si ya estamos en iniciar_sesion.html (evitar loop)
            if (window.location.pathname.includes('iniciar_sesion.html')) {
                console.log('‚ö†Ô∏è [SECURE] Ya estamos en iniciar_sesion.html, evitando loop');
                return;
            }

            // Esperar a que secureAuthManager est√© disponible
            await waitForSecureAuthManager();
            console.log('‚úÖ [SECURE] secureAuthManager disponible');

            // Esperar a que auth.currentUser est√© disponible (puede tardar un momento)
            const hasAuthUser = await waitForAuthUser();
            if (!hasAuthUser) {
                console.log('‚ùå [SECURE] Usuario no autenticado en Firebase despu√©s de esperar, redirigiendo a login...');
                // Solo redirigir si no estamos ya en loginsecure
                if (!window.location.pathname.includes('iniciar_sesion.html')) {
                    window.location.replace('iniciar_sesion.html');
                }
                return;
            }

            console.log('‚úÖ [SECURE] Usuario autenticado en Firebase:', auth.currentUser.email);

            // Esperar a que los datos se carguen desde Firestore
            // Esto puede tardar un momento, as√≠ que esperamos con retry
            let retries = 0;
            const maxRetries = 30; // 3 segundos m√°ximo
            
            // Primero intentar cargar desde sessionStorage
            window.secureAuthManager.loadUserFromStorage();
            
            // Si no hay datos en sessionStorage, esperar a que se carguen desde Firestore
            while (retries < maxRetries) {
                const currentUser = window.secureAuthManager.getCurrentUser();
                if (!currentUser) {
                    console.log(`üîÑ [SECURE] Esperando carga de datos... (${retries + 1}/${maxRetries})`);
                    // Intentar refrescar permisos
                    await window.secureAuthManager.refreshUserPermissions();
                    await new Promise(resolve => setTimeout(resolve, 100));
                    retries++;
                } else {
                    console.log('‚úÖ [SECURE] Datos cargados correctamente');
                    break;
                }
            }

            // Verificar autenticaci√≥n en el manager
            if (!window.secureAuthManager.isAuthenticated()) {
                console.log('‚ùå [SECURE] Usuario no autenticado en manager despu√©s de esperar, redirigiendo...');
                // Solo redirigir si no estamos ya en loginsecure
                if (!window.location.pathname.includes('iniciar_sesion.html')) {
                    window.location.replace('iniciar_sesion.html');
                }
                return;
            }

            // Obtener usuario actual
            const user = window.secureAuthManager.getCurrentUser();
            if (!user) {
                console.error('‚ùå [SECURE] No se pudo obtener informaci√≥n del usuario despu√©s de esperar');
                // Solo redirigir si no estamos ya en loginsecure
                if (!window.location.pathname.includes('iniciar_sesion.html')) {
                    window.location.replace('iniciar_sesion.html');
                }
                return;
            }

            console.log('‚úÖ [SECURE] Usuario autenticado:', user.username);

            // Primero verificar si hay una URL de redirecci√≥n post-login guardada
            let targetModule = null;
            try {
                const postLoginRedirect = sessionStorage.getItem('postLoginRedirect');
                if (postLoginRedirect) {
                    // Extraer solo el pathname de la URL completa
                    const url = new URL(postLoginRedirect, window.location.origin);
                    const pathname = url.pathname;
                    
                    // Whitelist de p√°ginas secure permitidas
                    const whitelist = [
                        'calendario.html',
                        'empleados.html',
                        'tickets.html',
                        'registro_horas.html',
                        'edicion_horas.html',
                        'reportes_gerenciales.html',
                        'recursos_humanos_modulos.html',
                        'operario_bodega.html',
                        'auditoria_stock.html',
                        'administrador_bodega.html',
                        'admin_inventario_bodegas.html',
                        'admin_inventario_productos.html',
                        'admin_inventario_transacciones.html',
                        'admin_inventario_transferencias.html',
                        'admin_inventario_dashboard.html',
                        'admin_inventario_reportes.html',
                        'admin_inventario_auditoria.html',
                        'admin_inventario_revisar_gastos.html',
                        'admin_inventario_liquidar_especiales.html',
                        'admin_inventario_pedidos_especiales.html',
                        'admin_inventario_cuentas_gasto.html',
                        'admin_inventario_proveedores.html',
                        'admin_inventario_instructivo.html'
                    ];
                    
                    // Extraer nombre del archivo del pathname
                    const filename = pathname.split('/').pop() || pathname;
                    
                    // Verificar que est√© en la whitelist
                    if (whitelist.includes(filename)) {
                        targetModule = filename;
                        if (window.safeLogger) {
                            window.safeLogger.info('URL de redirecci√≥n post-login validada');
                        } else {
                            console.log('üéØ [SECURE] Usando URL de redirecci√≥n post-login:', targetModule);
                        }
                        // Limpiar el postLoginRedirect despu√©s de usarlo
                        sessionStorage.removeItem('postLoginRedirect');
                    } else {
                        if (window.safeLogger) {
                            window.safeLogger.warn('URL de redirecci√≥n no est√° en whitelist', { filename });
                        } else {
                            console.warn('‚ö†Ô∏è [SECURE] URL de redirecci√≥n no est√° en whitelist:', filename);
                        }
                        // Limpiar el postLoginRedirect inv√°lido
                        sessionStorage.removeItem('postLoginRedirect');
                    }
                }
            } catch (e) {
                if (window.safeLogger) {
                    window.safeLogger.error('Error al leer postLoginRedirect', e);
                } else {
                    console.error('‚ùå [SECURE] Error al leer postLoginRedirect:', e);
                }
            }

            // Si no hay postLoginRedirect, determinar m√≥dulo seg√∫n permisos
            if (!targetModule) {
                targetModule = getFirstAvailableModule(user.permisos);
                console.log('üéØ [SECURE] M√≥dulo por defecto seg√∫n permisos:', targetModule);
            }

            // Redirecci√≥n con delay para mostrar el mensaje
            setTimeout(() => {
                window.location.href = targetModule;
            }, 1500);
        });

        // Funci√≥n para determinar el primer m√≥dulo disponible seg√∫n permisos
        function getFirstAvailableModule(permisos) {
            // Prioridad 1: Registro de horas (m√°s com√∫n para empleados)
            if (permisos.registro_horas === true) {
                console.log('üéØ [SECURE] M√≥dulo por defecto: registro_horas.html');
                return 'registro_horas.html';
            }
            
            // Prioridad 2: Reportes gerenciales (para gerentes)
            if (permisos.reportes_gerenciales === true) {
                console.log('üéØ [SECURE] M√≥dulo por defecto: reportes_gerenciales.html');
                return 'reportes_gerenciales.html';
            }
            
            // Prioridad 3: Tickets (menos com√∫n como p√°gina inicial)
            if (permisos.tickets === true) {
                console.log('üéØ [SECURE] M√≥dulo por defecto: tickets.html');
                return 'tickets.html';
            }

            // Si no tiene permiso de registro_horas, buscar otros m√≥dulos disponibles
            const modulePriority = [
                { module: 'calendario.html', permission: 'calendario' },
                { module: 'edicion_horas.html', permission: 'edicion_horas' },
                { module: 'empleados.html', permission: 'empleados' },
                { module: 'reporte_ventas.html', permission: 'ventas' }
            ];

            for (const { module, permission } of modulePriority) {
                if (permisos[permission] === true) {
                    console.log(`üéØ [SECURE] M√≥dulo seleccionado: ${module} (permiso: ${permission})`);
                    return module;
                }
            }

            // Si no tiene permisos para ning√∫n m√≥dulo, mostrar mensaje
            console.warn('‚ö†Ô∏è [SECURE] Usuario sin permisos para ning√∫n m√≥dulo');
            // Por ahora redirigir a login si no tiene permisos
            return 'iniciar_sesion.html';
        }
    </script>
</body>
</html>

