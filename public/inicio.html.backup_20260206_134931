            backdrop-filter: blur(10px);
            max-width: 400px;
            width: 100%;
        }

        .redirect-icon {
            font-size: 4rem;
            color: #667eea;
            margin-bottom: 20px;
        }

        .redirect-title {
            color: #333;
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 15px;
        }

